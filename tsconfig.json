{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleDetection": "force",
      "resolveJsonModule": true,
      "types": ["node", "hardhat"]
    },
    "include": [
      "./hardhat.config.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  